{
  "name": "zephyr",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "CYPRESS=true DATABASE_URL=file:./test.db cypress run",
    "test:ui": "CYPRESS=true DATABASE_URL=file:./test.db cypress open",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "db:generate": "prisma generate",
    "db:push": "wrangler d1 execute DB --local --file=./prisma/migrations/schema.sql",
    "db:push:remote": "wrangler d1 execute DB --file=./prisma/migrations/schema.sql",
    "db:migrate": "prisma db push",
    "db:migrate:local": "prisma db push && npm run db:push",
    "db:migrate:remote": "prisma db push && npm run db:push:remote",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.9",
    "@opennextjs/cloudflare": "^1.7.1",
    "@prisma/adapter-d1": "^6.16.1",
    "@prisma/client": "^6.16.1",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "next": "^15.5.2",
    "radix-ui": "^1.4.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "svix": "^1.76.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@clerk/testing": "^1.12.4",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.13",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cypress": "^14.5.4",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-plugin-cypress": "^5.1.1",
    "prisma": "^6.16.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.34.0"
  }
}
